{% extends 'base.html.twig' %}

{% block title %}Hello MarqueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Marques</h1>
    <button type="button" class="btn btn-danger"><a href="{{ path('home') }}" style="color:black">Retour a homepage</a></button>
    <button type="button" class="btn btn-danger"><a href="{{ path('marque-add') }}" style="color:black">Ajouter une marque</a></button>



       {% for marque in marques %}

             <h5>{{ marque.name }}</h5>
           <a href="{{ path('marque-detail', {'marque': marque.id}) }}" class="btn btn-primary">Detail marque</a>

       {% endfor %}

</div>
{% endblock %}

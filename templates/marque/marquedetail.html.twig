{% extends 'base.html.twig' %}

{% block title %}Voitures par marque{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <button type="button" class="btn btn-danger"><a href="{{ path('marque') }}" style="color:black">Voir marques</a></button>
        {% for voit in marque.voitures %}
            <img src="{{ voit.image }}">
            <li>{{ voit.puissance }}</li>
        {% endfor %}


    </div>
{% endblock %}
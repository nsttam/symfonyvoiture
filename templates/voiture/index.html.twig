{% extends 'base.html.twig' %}

{% block title %}Hello VoitureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! âœ…</h1>
{#pour voit.image, j'ai du mettre dans entity marque, fx toString#}
    <button type="button" class="btn btn-danger"><a href="{{ path('voiture-add') }}" style="color:black">Add Voiture</a></button>
    <button type="button" class="btn btn-danger"><a href="{{ path('home') }}" style="color:black">Retour a homepage</a></button>
    <ul>
        {% for voit in voiture %}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ voit.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ voit.marque }}</h5>
                    <ul>
                        <li>
                            Puissance: {{ voit.puissance }}
                        </li>
                        <li>
                            Km: {{ voit.kilometres }}
                        </li>
                    </ul>
                    <a href="{{ path('voiture-detail', {'voiture': voit.id}) }}" class="btn btn-primary">Detail voiture</a>
                </div>
            </div>
        {% endfor %}

    </ul>
</div>
{% endblock %}
